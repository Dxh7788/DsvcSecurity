    <!-- 配置Spring JDBC -->
    <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
    	<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
    	<property name="url" value="jdbc:mysql://localhost:3306/jdbct?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false"></property>
    	<property name="username" value="root"></property>
    	<property name="password" value="anan1215"></property>
    </bean>
    
    <!--  该版本的redis的password必须手动配置-->
    <bean id="jedisConnFactory" class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
    	<property name="password" value="foobared"></property>
    </bean>
    <!-- 配置redisTemplate -->
    <bean id="template" class="org.springframework.data.redis.core.RedisTemplate">
    	<property name="connectionFactory" ref="jedisConnFactory"></property>
    	<property name="keySerializer" ref="subDefaultRedisSerializer"></property>
    	<property name="valueSerializer" ref="subDefaultRedisSerializer"></property>
    </bean>
    <bean id="subDefaultRedisSerializer" class="org.springframework.data.redis.serializer.StringRedisSerializer"></bean>
    
    <bean class="com.config.TestConfig"></bean>
 </beans>